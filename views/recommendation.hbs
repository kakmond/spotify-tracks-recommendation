    else if (currentStep == 2) {
        hideAllSteps() // hide every step first
        // initialize current track
        $.ajax({
            url: 'https://api.spotify.com/v1/tracks/' + recommendationArray[arrayIndex].track_id,
            headers: {
                'Authorization': 'Bearer ' + access_token
