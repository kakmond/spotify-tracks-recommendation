    let startRandomFrom = haveBeen ? getCookie('startRandomFrom_' + songId) : ""
    let yesAnswerCount = haveBeen ? getCookie('yesAnswerCount_' + songId) : 0
    let noAnswerCount = haveBeen ? getCookie('noAnswerCount_' + songId) : 0
