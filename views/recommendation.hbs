                    })
                }
            })

        }
    }

    function nextPageSurvey() {
        let forms = []
        let isValid = true
        let errors = []
        for (let questionIndex = 1; questionIndex <= 15; questionIndex++) {
            if (document.forms["formQuestion"]["q_" + questionIndex].value == "") {
                let questionText = $("#questionText_" + questionIndex).text()
                errors.push(questionText)
                isValid = false
            }
        }
        if (!isValid) {
            $("#wariningText").html(errors.join('<br>'))
            $('#alertModel').modal('show')
            return false
        }
        else {
            $("#page1Survey").hide()
            $("#page2Survey").show()
            $("#page1Button").hide()
            $("#page2Button").show()
        }


    }
