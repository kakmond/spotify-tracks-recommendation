<div class="container">
    <div class="text-center">
        <h1 style="font-size: 38px" class="lead text-bold text-success py-3">Top-10 <span class="text-dark">
                Tracks</span>
        </h1>
    </div>
    <ul class="list-group list-group-flush">
        {{#each tracks}}
        <li class="media">
            <img src={{this.album.images.[0].url}} style="width:75px;" class="mx-3 my-1 rounded-circle">
            <div class="media-body list-group-item">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="mt-0 mb-1"><a href="/song/{{this.id}}" class="text-success">{{this.name}}</a></h5>
                        <footer class="blockquote-footer">
                            <cite title="Source Title">
                                {{#each this.artists}}
                                {{this.name}}{{#if @last}}{{else}}<span>,</span>{{/if}}
                                {{/each}}
                            </cite>
                        </footer>
                    </div>
                    <div>
                        <a href="/recommendation/{{this.id}}" role="button" class="btn btn-outline-info">Suggestion</a>
                    </div>
                </div>
            </div>
        </li>
        {{/each}}
    </ul>
</div>

<style>
    .tracks {
        width: 600px;
    }
</style>